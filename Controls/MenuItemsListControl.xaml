<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="RestaurantPOS.Controls.MenuItemsListControl"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:RestaurantPOS.Controls"
    xmlns:data="clr-namespace:RestaurantPOS.Data"
    x:Name="this">

    <CollectionView x:Name="MenuCollectionView" BindingContext="{x:Reference this}" ItemsSource="{Binding Items}">
        <CollectionView.ItemsLayout>
            <GridItemsLayout
                x:Name="GridLayout"
                HorizontalItemSpacing="10"
                Orientation="Vertical"
                Span="4"
                VerticalItemSpacing="10" />
        </CollectionView.ItemsLayout>
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="data:MenuItem">
                <Border
                    Padding="15"
                    Stroke="#DDD"
                    StrokeShape="RoundRectangle 15">
                    <VerticalStackLayout Spacing="12">
                        <Border
                            BackgroundColor="{StaticResource LightWeat}"
                            HeightRequest="120"
                            StrokeThickness="0">
                            <Image
                                Aspect="AspectFit"
                                BackgroundColor="{StaticResource LightWeat}"
                                HorizontalOptions="Center"
                                Source="{Binding Icon}"
                                VerticalOptions="Center" />
                        </Border>
                        <Label
                            FontAttributes="Bold"
                            FontSize="18"
                            LineBreakMode="TailTruncation"
                            MaxLines="2"
                            Text="{Binding Name}"
                            HorizontalTextAlignment="Center" />
                        <Label
                            FontSize="14"
                            LineBreakMode="TailTruncation"
                            MaxLines="3"
                            Text="{Binding Description}"
                            TextColor="Gray"
                            HorizontalTextAlignment="Center" />
                        <FlexLayout JustifyContent="SpaceBetween" AlignItems="Center">
                            <Label
                                FontAttributes="Bold"
                                FontSize="20"
                                Text="{Binding Price, StringFormat='{0:C}'}"
                                TextColor="Maroon"
                                VerticalOptions="Center" />
                            <Button
                                BackgroundColor="{StaticResource LightWeat}"
                                Command="{Binding Source={x:RelativeSource AncestorType={x:Type controls:MenuItemsListControl}}, Path=ItemSelectedCommand}"
                                CommandParameter="{Binding .}"
                                CornerRadius="12"
                                FontSize="14"
                                HeightRequest="35"
                                Text="Add"
                                TextColor="Maroon"
                                ToolTipProperties.Text="Add to current order"
                                WidthRequest="70" />
                        </FlexLayout>
                    </VerticalStackLayout>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding Source={x:RelativeSource AncestorType={x:Type controls:MenuItemsListControl}}, Path=ItemSelectedCommand}" CommandParameter="{Binding .}" />
                    </Border.GestureRecognizers>
                </Border>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentView>
