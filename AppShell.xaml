<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RestaurantPOS.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:RestaurantPOS"
    xmlns:pages="clr-namespace:RestaurantPOS.Pages"
    Title="Restaurant POS"
    Shell.FlyoutBackgroundColor="Wheat"
    Shell.FlyoutBehavior="Flyout"
    Shell.FlyoutWidth="280"
    Shell.NavBarIsVisible="True">

    <!-- Flyout Header -->
    <Shell.FlyoutHeader>
        <Grid BackgroundColor="Maroon" HeightRequest="120" Padding="20">
            <VerticalStackLayout VerticalOptions="Center" Spacing="5">
                <Label 
                    Text="Restaurant POS"
                    FontSize="24"
                    FontAttributes="Bold"
                    TextColor="White"
                    HorizontalOptions="Center" />
                <Label 
                    Text="Point of Sale System"
                    FontSize="14"
                    TextColor="LightGray"
                    HorizontalOptions="Center" />
            </VerticalStackLayout>
        </Grid>
    </Shell.FlyoutHeader>

    <!-- Navigation Items -->
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate pages:MainPage}"
        Icon="home.png"
        Route="MainPage" />

    <ShellContent
        Title="Orders"
        ContentTemplate="{DataTemplate pages:OrdersPage}"
        Icon="list.png"
        Route="OrdersPage" />

    <ShellContent
        Title="Manage Menu"
        ContentTemplate="{DataTemplate pages:ManageMenuItemPage}"
        Icon="grid.png"
        Route="ManageMenuItemPage" />

    <!-- Flyout Footer -->
    <Shell.FlyoutFooter>
        <VerticalStackLayout Padding="20" Spacing="15" BackgroundColor="White">
            <Border
                Padding="15"
                BackgroundColor="DarkSlateGray"
                StrokeShape="RoundRectangle 10"
                StrokeThickness="0">
                <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                    <Image 
                        Source="envelope.png"
                        HeightRequest="20"
                        WidthRequest="20"
                        VerticalOptions="Center" />
                    <Label
                        Text="Support"
                        FontAttributes="Bold"
                        FontSize="14"
                        TextColor="White"
                        VerticalOptions="Center" />
                </HorizontalStackLayout>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                </Border.GestureRecognizers>
            </Border>
            <Label
                Text="Version 1.0"
                FontSize="12"
                TextColor="Gray"
                HorizontalOptions="Center" />
        </VerticalStackLayout>
    </Shell.FlyoutFooter>
</Shell>
